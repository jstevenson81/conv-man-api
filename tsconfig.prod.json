{
  "compilerOptions": {
    "lib": ["es5", "es6", "ES2020", "es2018", "esnext.asynciterable"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build", "**/spec/*.spec.ts", "src/tests"]
}
